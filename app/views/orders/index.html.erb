<div class="header">
  <div class="title">
    <h1>Memory</h1>
  </div>
</div>
<div class="container">

  <div class="country">
    <div class="dropdown">
      <h2>Country</h2>
      <button class="dropdown-toggle" type="btn btn-primary" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Choose your country</button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <% @countries.each do |country| %>
          <%= link_to country, root_path(query: country), class: "dropdown-item" %>
        <% end %>
      </div>
    </div>
  </div>

  <h2>Summary</h2>
  <div class="summary inline">
    <div class="revenue card">
      <h3>Revenue</h3>
      <p><%= @total_revenue %> €</p>
    </div>
    <div class="avg card">
      <h3>Average revenue / order</h3>
      <p><%= @avg_order %> €</p>
    </div>
    <div class="customers card">
      <h3>Total customers</h3>
      <p>You have <%= @total_customers %> customers</p>
    </div>
  </div>

  <div class="monthly">
    <h2>Revenu per month</h2>
    <p><%= @orders.last.unit_price %> €</p>
  </div>
</div>
